<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.social.mapper.AnnouncementMapper">
    <insert id="insert" parameterType="com.school.social.entity.Announcement" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO announcements
        <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="title != null">title,</if>
        <if test="content != null">content,</if>
        <if test="status != null">status,</if>
        <if test="startAt != null">start_at,</if>
        <if test="endAt != null">end_at,</if>
        <if test="createdAt != null">created_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
        <if test="title != null">#{title},</if>
        <if test="content != null">#{content},</if>
        <if test="status != null">#{status},</if>
        <if test="startAt != null">#{startAt},</if>
        <if test="endAt != null">#{endAt},</if>
        <if test="createdAt != null">#{createdAt},</if>
        </trim>
    </insert>
    <update id="updateById" parameterType="com.school.social.entity.Announcement">
        UPDATE announcements
        <set>
        <if test="title != null">title = #{title},</if>
        <if test="content != null">content = #{content},</if>
        <if test="status != null">status = #{status},</if>
        <if test="startAt != null">start_at = #{startAt},</if>
        <if test="endAt != null">end_at = #{endAt},</if>
        <if test="createdAt != null">created_at = #{createdAt},</if>
        </set>
        WHERE id = #{id}
    </update>
    <delete id="deleteById" parameterType="long">
        DELETE FROM announcements WHERE id = #{id}
    </delete>
    <select id="selectById" parameterType="long" resultType="com.school.social.entity.Announcement">
        SELECT id, title, content, status, start_at, end_at, created_at FROM announcements WHERE id = #{id}
    </select>
    <select id="selectAll" resultType="com.school.social.entity.Announcement">
        SELECT id, title, content, status, start_at, end_at, created_at FROM announcements
    </select>
    <select id="selectPaged" resultType="com.school.social.entity.Announcement">
        SELECT id, title, content, status, start_at, end_at, created_at
        FROM announcements
        <where>
            <if test="status != null">
                status = #{status}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{size} OFFSET #{offset}
    </select>
    <select id="countByStatus" resultType="int">
        SELECT COUNT(1)
        FROM announcements
        <where>
            <if test="status != null">
                status = #{status}
            </if>
        </where>
    </select>

</mapper>
